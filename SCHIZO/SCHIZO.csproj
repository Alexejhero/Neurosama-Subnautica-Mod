<Project Sdk="Microsoft.NET.Sdk">
    <ItemGroup>
        <EmbeddedResource Include="Resources\**" />
        <EmbeddedResource Remove="Resources\**\*.cs" />

        <EmbeddedResource Remove="Resources\AssetBundles\AssetBundles" />
        <EmbeddedResource Remove="Resources\AssetBundles\*.manifest" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Resources\AssetBundles\AssetBundles" />
        <None Remove="Resources\AssetBundles\AssetBundles.manifest" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="$(SolutionDir)\SCHIZO.API\SCHIZO.API.csproj" />
    </ItemGroup>
    
    <ItemGroup Condition=" '$(Configuration)' == 'Subnautica' ">
        <EmbeddedResource Include="$(SolutionDir)\SCHIZO.API\bin\Subnautica\net472\SCHIZO.API.dll" LinkBase="Resources\Assemblies" />
    </ItemGroup>
    
    <ItemGroup Condition=" '$(Configuration)' == 'BelowZero' ">
        <EmbeddedResource Include="$(SolutionDir)\SCHIZO.API\bin\BelowZero\net472\SCHIZO.API.dll" LinkBase="Resources\Assemblies" />
    </ItemGroup>
</Project>
